@model IEnumerable<Project_Battery.Models.Enquiry>

@{
    ViewData["Title"] = "AdminMenu";
}

<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>문의 확인</title>
</head>
<body>
    <div>
        <h2>문의 현황입니다</h2>

        @if (Model != null && Model.Any())
        {
            <!-- 문의 내역을 반복하여 출력 -->
            @foreach (var enquiry in Model)
            {
                <div style="border: 1px solid #ddd; padding: 10px; margin-bottom: 10px;">
                    <p><strong>제목:</strong> @enquiry.Title</p>
                    <p><strong>문의내용:</strong> @enquiry.Contents</p>
                    <p><strong>카테고리:</strong> @enquiry.Category</p>
                    <p><strong>이름:</strong> @enquiry.Name</p>
                    <p><strong>이메일:</strong> @enquiry.Email</p>
                </div>
            }
        }
        else
        {
            <p>현재 문의 내역이 없습니다.</p>
        }
    </div>

    <div>
        <a asp-action="Index">홈으로 이동</a>
    </div>
</body>
</html>
